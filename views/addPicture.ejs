<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i>New picture</h1>
        <% include ./partials/messages %>
        
  <form action="/pictures/new" method="POST" enctype="multipart/form-data" accept="image/*" required>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name = "title" placeholder="Image title">
  </div>

  <div class="form-group">
    <input class="form-check-input" type="checkbox" value="" id="front" name="front">
    <label class="form-check-label" for="defaultCheck1">
      Front page?
    </label>
  </div>


 <div class="form-group">
    <label for="picture_file">Select the image from your computer</label>
    <input type="file" class="form-control-file" id="myImage" name = "myImage">
  </div>

   <button type="submit" class="btn btn-primary btn-block">Insert picture</button>
</form>

       
      </div>
    </div>
  </div>
